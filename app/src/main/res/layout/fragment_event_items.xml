        android:background="@drawable/header">

        <ImageButton
            android:id="@+id/button_add_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/add"/>

        <TextView
            android:layout_width="wrap_content"
